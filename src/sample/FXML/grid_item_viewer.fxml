<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="grid_item" onMousePressed="#click_player" prefHeight="155.0" prefWidth="167.0" styleClass="jfx-anchor-pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.grid_item_controller">
   <children>
      <VBox prefHeight="154.0" prefWidth="167.0">
         <children>
            <ImageView fx:id="image" fitHeight="120.0" fitWidth="167.0" pickOnBounds="true" preserveRatio="false">
               <image>
                  <Image url="@Background%20Image/player.png" />
               </image>
            </ImageView>
            <Label fx:id="grid_player_name" alignment="CENTER" prefHeight="34.0" prefWidth="167.0" text="Name">
               <font>
                  <Font name="Algerian" size="14.0" />
               </font></Label>

         </children>
      </VBox>
   </children>
</AnchorPane>
